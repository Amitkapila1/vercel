{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    //"module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
   
    // "paths": {
     //   "tslib" : ["./node_modules/tslib/tslib.d.ts"]
     // },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    //"module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    //"target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "node"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": false
    
  }
}
